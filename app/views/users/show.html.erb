<% provide(:title, @user.name) %>

<h1>Hello, <%= @user.name %></h1>
<% if current_user?(@user) %>
  <aside class="col-md-4">
    <h3>Post a new review </h3>
    <%= render 'shared/search_form' %>
  </aside>
<% end %>
<div class="col-md-8">
  <% if @user.reviews.any? %>
    <h3>Previous reviews (<%= @user.reviews.count %>)</h3>
    <ol class="reviews">
      <%= render @reviews %>
    </ol>
    <%= will_paginate @reviews %>
  <% end %>
</div>
