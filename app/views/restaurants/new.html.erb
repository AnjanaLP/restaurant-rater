<% provide(:title, 'Write a review') %>
<div class="center">
  <h1>Add a restaurant</h1>
</div>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@restaurant) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :description %>
      <%= f.text_area :description %>

      <%= f.label :address_1 %>
      <%= f.text_field :address_1 %>

      <%= f.label :address_2 %>
      <%= f.text_field :address_2 %>

      <%= f.label :city %>
      <%= f.text_field :city %>

      <%= f.label :county %>
      <%= f.text_field :county %>

      <%= f.label :phone %>
      <%= f.text_field :phone %>

      <%= f.label :email %>
      <%= f.email_field :email %>

      <%= f.submit "Add restaurant", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
