<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@restaurant) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :description %>
      <%= f.text_area :description %>

      <%= f.label :category %>
      <%= f.select :category_id, Category.all.map { |f| [f.name, f.id] } %>

      <%= f.label :address_1 %>
      <%= f.text_field :address_1 %>

      <%= f.label :address_2 %>
      <%= f.text_field :address_2 %>

      <%= f.label :city %>
      <%= f.text_field :city %>

      <%= f.label :county %>
      <%= f.text_field :county %>

      <%= f.label :phone %>
      <%= f.text_field :phone %>

      <%= f.label :email %>
      <%= f.email_field :email %>

      <%= f.submit yield(:button_text), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
