<% provide(:title, 'Add a review') %>
<div class="center">
  <h1>Add a review</h1>
</div>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for [@restaurant, @review] do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.text_area :content, placeholder: "Compose your review..." %>

      <%= f.label :rating, "Rating 1 - 5" %>
      <%= f.number_field :rating, value: 1, min: 1, max: 5 %>

      <%= f.submit "Submit your review", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
